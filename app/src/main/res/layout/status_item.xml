<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/userImage"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Status"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to add status update"
        android:textColor="#626262"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toBottomOf="@+id/textStatus" />

    <TextView
        android:id="@+id/recentStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent updates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userImage"
        android:layout_marginStart="12dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:id="@+id/recentUserUpdater"
        android:layout_height="70dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentStatus"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/recentUserUpdaterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:="@+id/recentStatus"
        app:layout_constraintStart_toEndOf="@+id/recentUserUpdater"
        app:layout_constraintTop_toBottomOf="@+id/recentStatus"
        android:layout_marginTop="18dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/recentUserUpdateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today 2:30 PM"
        app:layout_constraintStart_toEndOf="@+id/recentUserUpdater"
        app:layout_constraintTop_toBottomOf="@+id/recentUserUpdaterName"
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>